# Backend Environment Variables
# Copy this file to .env for production or .env.dev for development

# Environment Configuration
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://app.casewisemd.org,https://casewisemd.org,https://www.casewisemd.org

# API Configuration
API_BASE_URL=https://api.casewisemd.org
MCP_PORT=8000

# OHIF Viewer Configuration
OHIF_BASE_URL=https://viewer.casewisemd.org/viewer

# DICOMweb Configuration
DICOMWEB_ENDPOINT=https://api.casewisemd.org/orthanc/dicom-web

# Orthanc Configuration
ORTHANC_URL=http://localhost:8042
ORTHANC_PORT=8042

# OpenAI Configuration (Required for AI grading)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# AI Grading Configuration
AI_GRADING_ENABLED=true
AI_GRADING_PROVIDER=openai
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RETRIES=3

# Docker Environment Variables (used by docker-compose)
COMPOSE_PROJECT_NAME=casewise
DOCKER_MCP_PORT=8000
DOCKER_ORTHANC_PORT=8042
DOCKER_MCP_CONTAINER=mcp
DOCKER_ORTHANC_CONTAINER=casewise_orthanc

# File Storage Configuration
DEMO_CASES_PATH=/app/demo_cases
UPLOAD_MAX_SIZE=50MB
ALLOWED_FILE_TYPES=.dcm,.dicom,.jpg,.png,.pdf

# Logging Configuration
LOG_FILE=/app/logs/casewise.log

# Database Configuration (Future)
# DATABASE_URL=postgresql://user:password@localhost:5432/casewise_db
# REDIS_URL=redis://localhost:6379/0

# Security Configuration (Future)
# JWT_SECRET=your-super-secure-jwt-secret-key-here
# SESSION_TIMEOUT=3600

